<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add/Update Card"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <CheckBox
            android:id="@+id/cbNoNFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't have NFC card"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnScanNFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan NFC Card"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvNfcStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap 'Scan NFC Card' button"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name *"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etProfession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profession *"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etOrganization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization (optional)"
            android:inputType="text"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bio *"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="12dp"
            android:enabled="false"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone (optional)"
            android:inputType="phone"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etLinkedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LinkedIn (optional)"
            android:inputType="textUri"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etGitHub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GitHub (optional)"
            android:inputType="textUri"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Card"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>